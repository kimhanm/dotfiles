[settings]
screenchange-reload = true

;; ==== bspwm ====

[bar/bspwm-top-bar]
;; Position and Layout
width = 100%
height = 64
;radius = 32
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1

;; Inter Process
enable-ipc = true
;override-redirect = true
wm-restack = bspwm



;; Appearance
font-0 = "DejaVuSansMono Nerd Font:size=28;8"
background = ${colors.black}
foreground = ${colors.white}

;; Modules
modules-left = bspwm stalonetray
modules-center = date
modules-right = network pulseaudio battery




;; ==== XMonad ====

[bar/xmonad-top-bar]
width = 100%
height = 64
padding-left = 1
padding-right = 1
module-margin-left=1
module-margin-right=1

modules-left    = xmonad-log stalonetray
modules-center  = date
modules-right   = network pulseaudio battery

background = ${colors.black}
foreground = ${colors.white}
font-0 = "DejaVuSansMono Nerd Font:size=28;8"




; === Modules ===

[module/date]
type = internal/date
interval = 1
click-left = #date.toggle

date      = ""
date-alt  = %Y-%m-%d%
time      = %H:%M:%S
time-alt  = %H:%M:%S
label     = %date% %time%



[module/stalonetray]
type = custom/script
exec = echo "  "
format = <label>
click-left = exec traycollapse

[module/battery]
type = internal/battery

battery = BAT1
adapter = ADP1
poll-interval = 10

format-charging = <label-charging>
label-charging  = " %percentage%%"
format-discharging  = "<ramp-capacity>  <label-discharging>"
label-discharging   = %percentage%%
label-full = " %percentage%%"

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""
ramp-capacity-5 = ""


[module/network]
type = internal/network
interface = wlp1s0
interval = 5
;click-right = nm-connection-editor

;format-connected = <ramp-signal> <label-connected>
format-connected = <label-connected>
;format-connected-alt = <label-connected-alt>
;label-connected = %essid% %downspeed:9%
label-connected = "%downspeed:9%"
;label-connected-alt = "%essid%"
label-disconnected = "睊"

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
format-muted = <label-muted>
label-muted = "婢"
click-left = toggle
click-right = pavucontrol

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = "墳"
ramp-volume-3 = ""

[module/cpu]
type      = internal/cpu
interval  = 1

label     = CPU %percentage%%

[module/memory]
type = internal/memory
interval = 3
format = <label> 
label = RAM %percentage_used%


[module/bspwm]
type = internal/bspwm

format = <label-state> <label-mode>


label-active = " %name% "
label-active-background = ${colors.blue}
label-active-foreground = ${colors.black}

label-occupied = " %name% "
label-empty = 

label-urgent = U
label-urgent-background = ${colors.yellow}
label-urgent-foreground = ${colors.black}

;label-focused = F
label-padding = 1


[module/xmonad-log]
type = custom/script
exec = xmonad-log

tail = true




; === Color Definitions ===

[colors]
include-file = ~/dotfiles/colors.ini
