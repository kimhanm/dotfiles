###################
# general hotkeys #
###################

# terminal emulator
super + Return
	alacritty

# emacs
super + shift + Return
  emacs

# program launcher
super + {shift + ,_}d
	{dmenu_run,rofi -show drun}

# file manager
super + {shift + ,_}e
  {alacritty -e ranger,rofi -show file-browser}

# clipboard menu
super + c
  clipmenu

# toggle compositor
super + alt + c
  if pgrep picom >/dev/null; then killall picom; else picom &; fi

# toggle polybar
super + alt + b
  polybar-msg cmd toggle

# web browser
super + w
  vivaldi-stable

# reload sxkhd config
super + p
	pkill -USR1 -x sxhkd

# Brightness and Sound #
super + alt + {Up,Down}
  lux -{a,s} 5%
XF86MonBrightness{Up,Down}
  lux -{a,s} 5%

super + alt + {_,shift + }minus
  amixer -q sset Master 4%{-,+}
XF86Audio{Mute,LowerVolume,RaiseVolume}
  amixer -q sset Master {toggle,4%-,4%+}

# screenshot
super + {_,alt + }shift + s
  escrotum -s {-C,~/Pictures/escrotum-%Y-%m-%d-%H%M%S.png}


#################
# bspwm hotkeys #
#################


# quit/restart bspwm
super + {alt + ,_}shift + p
	bspc {quit,wm -r}


# close and kill
super + shift + {_,alt + }q 
  bspc node -{c,k}

# cycle layouts: tiled, monocle 
super + space
	bspc desktop -l next

# send newest marked node to newest preselected node
super + m
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + shift + m
	bspc node -s biggest.window


# ==== state/flags ====

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


# ==== focus/swap ====

# focus/move node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus node relative path 
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# cycle windows in current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# cycle desktops in current monitor
super + {_,shift + }Tab
	bspc desktop -f {prev,next}.local

# focus last node/desktop
{alt,super} + section
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


# ==== preselect ====

# preselect direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel preselection for focused node
super + ctrl + space
	bspc node -p cancel

# cancel preselection for focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# ==== move/resize ====

# expand window 
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# shrink window 
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
