###################
# General Hotkeys #
###################

# terminal emulator
super + Return
	xterm

# program launcher
super + d
  dmenu_run
  #rofi -modi drun -show

# web browser
super + w
  vivaldi

# reload sxhkd config
super + shift + p
	pkill -USR1 -x sxhkd

#################
# bspwm Hotkeys #
#################

# quit bspwm normally
super + alt + shift + p
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# cycle layouts layout
super + space
	bspc desktop -l next




## Focus ##

# switch focus in direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus node for given path
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# cycle focus in desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local

# cycle desktops in current monitor
super + {_,shift + }Tab
	bspc desktop -f {next,prev}.local

# focus last node/desktop
{alt,super} + grave
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus/send to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


## State/Flags ##
# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


## preselect ##

# preselect direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel preselection for node
super + ctrl + space
	bspc node -p cancel

# cancel preselection for desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


## Move/Resize ##

# send newest marked node to newest preselected node
#super + y
	#bspc node newest.marked.local -n newest.!automatic.local

# swap current and biggest node
super + g
	bspc node -s biggest

# expand window outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# shrink window inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
